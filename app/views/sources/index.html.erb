<!-- Search function -->
<div class="search_form">
  <%= form_tag sources_path, :action => 'search', :method => 'get' do %>
  <%= text_field_tag :search, params[:search], :id => 'search_field' %>
  <%= submit_tag "find cloud", :name => nil, :id => 'search_form_button' %>       
  <% end %>
</div>

<!-- This displays an index of all existing sources  -->
<!-- <h2>Sources Index</h2> -->
<div class="sources_index">
<% @sources.each do |source| %>
  <div id="sources_index_inner">
    <h3><%= link_to(source.title, source_path(source)) if source.title %></h3>
    <p><%= source.original if source %></p> 
  </div><!-- sources_index_inner -->
<% end %>
</div><!-- sources_index -->


